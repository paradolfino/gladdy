<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hp</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Agility</th>
      <th>Xp</th>
      <th>Points</th>
      <th>Avatar</th>
      <th>Ladder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.hp %></td>
        <td><%= unit.attack %></td>
        <td><%= unit.defense %></td>
        <td><%= unit.agility %></td>
        <td><%= unit.xp %></td>
        <td><%= unit.points %></td>
        <td><%= unit.avatar %></td>
        <td><%= unit.ladder_id %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

